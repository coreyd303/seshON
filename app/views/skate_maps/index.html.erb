  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

  <div class="skate-map-btn">
    <ul style="list-style-type:none">
      <li>
        <img class="img-circle" src="http://i907.photobucket.com/albums/ac277/lord_Revelation911/skate.jpg" alt="Generic placeholder image" style="width: 170px; height: 170px; border-style: solid; border-width: 2px;">
        <br/>
        <br/>
        <%= link_to "Submit a SeshON Spot", new_user_skate_spot_path, class: "btn btn-success btn-lrg" %>
      </li>
      <br/>
    </ul>
  </div>

  <div id="map-canvas"></div>

<br/>

<div class="container">
  <div class="row">
    <% @spots.each do |spot| %>
    <div class="col-lg-4">
      <div class="thumbnail">
        <div class="caption">
          <h4 class="caption-link"><%= link_to spot.name, skate_spot_path(spot) %></h4>
          <p><%= image_tag(spot.image, height: '100', width: '100', style: 'border-style:solid; border-width:2px; border-radius:5px; border-color:white;') %></p>
          <p style="color:white;"><%= spot.address %></p>
          <p style="color:white;"><%= spot.city %>, <%= spot.zipcode %></p>
          <p><%= link_to "Delete", skate_spot_path(spot), method: :delete, class:"btn btn-warning btn-sm" %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

  <script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map-canvas'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    });
  </script>
